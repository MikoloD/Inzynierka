@model Inzynierka.Models.AddRoadModel

@{
    ViewData["Title"] = "Index";
    SelectList List = new SelectList(Model.Cities, "NodeId", "Name");
}

<
<div class="container">
    <h4>Dodaj Drogę</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AddedRoad.Name" class="control-label"></label>
                    <input asp-for="AddedRoad.Name" class="form-control" />
                    <span asp-validation-for="AddedRoad.Name" class="text-danger"></span>
                </div>
                <div class="form-inline my-3">
                    <label asp-for="AddedRoad.SourceNodeId" class="control-label mr-5 ml-2 my-3"></label>
                    <select asp-items="@(List)"
                            class="form-control" asp-for="AddedRoad.SourceNodeId">
                        <option value="wybierz">---Wybierz---</option>
                    </select>
                </div>
                <div class="form-inline my-3">
                    <label asp-for="AddedRoad.TargetNodeId" class="control-label mr-5 ml-2 my-3"></label>
                    <select asp-items="@(List)"
                            class="form-control" asp-for="AddedRoad.TargetNodeId">
                        <option value="wybierz">---Wybierz---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="AddedRoad.Distance" class="control-label"></label>
                    <input asp-for="AddedRoad.Distance" class="form-control" />
                    <span asp-validation-for="AddedRoad.Distance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddedRoad.Speed" class="control-label"></label>
                    <input asp-for="AddedRoad.Speed" class="form-control" />
                    <span asp-validation-for="AddedRoad.Speed" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddedRoad.Price" class="control-label"></label>
                    <input asp-for="AddedRoad.Price" class="form-control" />
                    <span asp-validation-for="AddedRoad.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
